{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Stream Locker",
  "version": "0.0.1",
  "identifier": "com.yeonv.stream-locker",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Stream Locker",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "connect-src": [
          "'self'",
          "http://*",
          "https://*",
          "ws://*",
          "wss://*"
        ],
        "media-src": ["'self'", "blob:", "http://*", "https://*"],
        "img-src": ["'self'", "data:", "http://*", "https://*"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "script-src": ["'self'", "'unsafe-inline'"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/app-icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 24
    }
  }
}
