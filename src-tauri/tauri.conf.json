{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Stream Locker",
  "version": "0.0.0",
  "identifier": "com.yeonv.stream-locker",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Stream Locker",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/app-icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
